<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <a href="#mainContent" class="link-main-content">Skip to Main Content</a>
        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" aria-label="Navigation Toggle">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><span class="glyphicon glyphicon-off natoma-icon" aria-hidden="true"></span> HHS Prototype</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.IsUserLoggedIn != null && ViewBag.IsUserLoggedIn)
                    {
                        <li><a href="@Url.Action("Index", "UserProfile")"><span class="glyphicon glyphicon-user natoma-icon" aria-hidden="true"></span> Profile</a></li>
                        <li><a href="@Url.Action("Index", "Message")"><span class="glyphicon glyphicon-envelope natoma-icon" aria-hidden="true"></span> Mailbox</a></li>
                    }
                    <li><a href="@Url.Action("Index", "Location")"><span class="glyphicon glyphicon-globe natoma-icon" aria-hidden="true"></span> Locations</a></li>
                    <li><a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-question-sign natoma-icon" aria-hidden="true"></span> About</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="mainContent" class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p><a href="http://www.natomatech.com" target="_blank"><img class="natoma-img-footer" src="~/Images/NT_Logo_rgb_tight_transparent.gif" alt="Natoma Technologies Logo" /></a></p>
            <p>&copy; @DateTime.Now.Year - Natoma Technologies, Inc.</p>
        </footer>
    </div>
</body>
</html>
